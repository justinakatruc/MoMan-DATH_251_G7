generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("MONGODB_URI")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String   @unique
  memberSince DateTime @default(now())
  accountType String
  password    String
}

model ExpenseCategory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  icon        String
  isDefault   Boolean  @default(false)
  userId     String?  @db.ObjectId
}

model IncomeCategory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  icon        String
  isDefault   Boolean  @default(false)
  userId     String?  @db.ObjectId
}